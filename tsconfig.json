{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./assets/*"],
      "@styles/*": ["./src/global/styles/*"],
      "@helpers/*": ["./src/global/helpers/*"],
      "@interfaces/*": ["./src/global/interfaces/*"],
      "@navigation/*": ["./src/navigation/*"]
    },
  },
  "exclude": ["node_modules", "dist"]
}
